@model List<Phone>

@{
    ViewData["Title"] = "Cart";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="@Url.Action("Congratulations", "Phone")" class="btn btn-primary">Checkout</a>
